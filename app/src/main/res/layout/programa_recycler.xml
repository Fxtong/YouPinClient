<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/color_card"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_width="170dp"
    android:layout_height="240dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--内容上部分-->
        <ImageView
            android:id="@+id/u_background"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            />
        <!--内容下部分-->
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            >
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:textSize="@dimen/home_card_name"
                    android:id="@+id/u_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/u_tags"
                    android:textColor="@color/color_card_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/u_signature"
                    android:textSize="@dimen/home_card_signature"
                    android:textColor="@color/color_card_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/home_card_total"
                    android:textColor="@color/color_card_total"
                    android:id="@+id/u_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--中间头像-->
    <com.online.youpinclient.ui.widget.CircleImageView
        android:id="@+id/u_avatar"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_color="@color/color_card"
        app:civ_border_width="2dp"
        app:civ_border_overlay="true"
        />


</android.support.v7.widget.CardView>